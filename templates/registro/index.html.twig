{% extends 'base.html.twig' %}

{% block title %}Hello RegistroController!{% endblock %}

{% block body %}
    <div class="container">
        {% if error is defined %}
            <div class="alert alert-danger mt-3" role="alert">
                {{ error }}
            </div>
        {% endif %}
        <form class="mt-3">
            <div class="row mb-3">
                <div class="col">
                    <label for="apellido1" class="form-label">Apellido 1</label>
                    <input type="text" class="form-control" id="apellido1" name="apellido1" aria-describedby="apellido1Help" required>
                    <div id="apellido1Help" class="form-text">Apellido 1 del usuario.</div>
                </div>
                <div class="col ">
                    <label for="apellido2" class="form-label">Apellido 2</label>
                    <input type="text" class="form-control" id="apellido2" name="apellido2" aria-describedby="apellido2Help" required>
                    <div id="apellido2Help" class="form-text">Apellido 2 del usuario.</div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" aria-describedby="nombreHelp" required>
                    <div id="nombreHelp" class="form-text">Nombre del usuario.</div>                    
                </div>
                <div class="col">
                    <label for="email" class="form-label">Correo electrónico</label>
                    <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" required>
                    <div id="emailHelp" class="form-text">Correo electrónico para poder acceder a la aplicación.</div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="password" aria-describedby="passwordHelp" required>  
                    <div id="passwordHelp" class="form-text">Contraseña del usuario.</div>
                </div>
            </div>
            <button type="submit" class="btn btn-outline-primary"><i class="bi bi-database-add"></i> Añadir</button>
        </form>
    </div>
{% endblock %}
